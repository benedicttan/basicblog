<% if !@message.nil? %>
  <h2 style=color:red><%= @message %></h2>
<% end %>

<h2>Create new post:</h2>
</br>
<form action="/" method="post" name="new_post_form">
  <label>Title</label></br>
  <input type=text id="post_tags" name="title"></br>
  </br>
  <label>Body</label></br>
  <textarea name="body" rows=5 cols=20></textarea></br>
  </br>
  <label>Tags (separate by commas)</label></br>
  <input type=text id="post_tags" name="tags"></br>
  </br>
  <input type=submit value=Submit>
</form>

</br>
</br>
</br>

<h2>All blog posts:</h2>
</br>
<table border=1>
  <tr align=center>
    <td><b>ID</b></td>
    <td><b>Title</b></td>
    <td><b>Body</b></td>
    <td><b>Tags</b></td>
  </tr>
  <% all_posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><a href="/post/<%= post.id %>"><%= post.title %></a></td>
    <td><%= post.body %></td>
    <td><% post.tags.each do |tag| %>
        <%= tag.title %>&nbsp;&nbsp;&nbsp;
        <% end %>
    </td>
  </tr>
  <% end %>
</table>

</br>
</br>
</br>

<h2>Browse by tags:</h2>
</br>
<% all_tags.each do |tag| %>
  <a href="/tag/<%= tag.title %>"><%= tag.title %></a>&nbsp;&nbsp;&nbsp;
<% end %>